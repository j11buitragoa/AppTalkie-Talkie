<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".repro_staccato">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <Button
            android:id="@+id/comenzar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="comenzar" />

        <Button
            android:id="@+id/reproa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="reproducir otra vez" />

        <TextView
            android:id="@+id/fonema"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tienes que pronunciar : " />

        <TextView
            android:id="@+id/silencio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Silencio" />

        <Button
            android:id="@+id/intentalo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="intentalo " />
        <TextView
            android:id="@+id/coincide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="" />

        <Button
            android:id="@+id/admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="admin" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>